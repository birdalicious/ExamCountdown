@inherits LayoutComponentBase

<div class="page">
    <MatThemeProvider Theme="@theme">
        <MatAppBarContainer Id="content">
            <MatAppBar Fixed="true">
                <MatAppBarRow>
                    <MatAppBarSection>
                         @if (!IsOnHomeScreen)
                         {
                             <MatIconButton Icon="keyboard_arrow_left" OnClick="@NavigationService.NavigateBack"></MatIconButton>
                         }
                        <MatAppBarTitle>Ass</MatAppBarTitle>
                    </MatAppBarSection>
                    <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                        <MatIconButton Icon="add"></MatIconButton>
                    </MatAppBarSection>
                </MatAppBarRow>
            </MatAppBar>
            <MatAppBarContent Id="content">
                @Body
            </MatAppBarContent>
        </MatAppBarContainer>

    @* <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main> *@
    </MatThemeProvider>
</div>

@code {
    private MatTheme theme = new MatTheme
        {
            Primary = "#ff6d00",
            Secondary = "#ffab00",
            Surface = "#ffffff"
        };

    [Inject]
    public INavigationService NavigationService { get; set; }

    public bool IsOnHomeScreen => NavigationService.RelativeUri is "" or "/";
}
