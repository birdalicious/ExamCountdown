@page "/add"
@page "/edit"

<div>
    <MatStringField Label="Title" @bind-Value="@Exam.Subject"></MatStringField>
    <MatStringField Label="Subheading" @bind-Value="@Exam.Subheading"></MatStringField>
</div>
<div>
    <div>
        <RadzenDatePicker @ref="@DateObj" Inline="true" ShowTimeOkButton="false" Min="DateTime.Now.Date" @bind-Value=@Exam.StartDateTime ShowTime="true" ShowSeconds="false" DateFormat="MM/dd/yyyy HH:mm" />
         <div>@Exam.StartDateTime</div>
    </div>
    <div>
        <div>
            <div>
                @Exam.TimeTillStart.Days
            </div>
            <div>
                Days
            </div>
        </div>
        <div>
            <div>
                @Exam.TimeTillStart.Hours
            </div>
            <div>
                Hours
            </div>
        </div>
        <div>
            <div>
                @Exam.TimeTillStart.Minutes
            </div>
            <div>
                Minutes
            </div>
        </div>
        <div>
            <div>
                @Exam.TimeTillStart.Seconds
            </div>
            <div>
                Seconds
            </div>
        </div>
    </div>
</div>